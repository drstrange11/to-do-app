<header>
  <div id='header-left'>
    <h1>Todo List</h1>
    <h3>Add a Todo!</h3>
  </div>

  <div>
    <form action="/todos" method="POST" class="form">
      <input type="text" name="title" placeholder="title"/>
      <input type="text" name="days" placeholder="days remaining">
      <input type="submit" />
    </form>
  </div>
</header>

<section class='todos-container'>
  <div class='gallery'>
    <% @todos.each_with_index do |tod, index| %>
      <div class='btn-container'>
        <h3>
          <a href="/todos/<%= index+1 %>" class="todo-box"> <%= tod[:todo] %> , <%= tod[:days]%> days remaining</a>
        </h3>
      </div>
    <% end %>
  </div>
</section>